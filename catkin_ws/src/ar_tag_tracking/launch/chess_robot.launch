<launch>
  <!-- Static Transform: Logitech Camera to World -->
  <node pkg="tf" type="static_transform_publisher" name="logitech_to_world"
        args="0 0 1.0 0 0 0 /world /logitech_c615 100" />

  <!-- Wrist Camera AR Detection -->
  <node name="ar_track_alvar_wrist" pkg="ar_track_alvar" type="individualMarkersNoKinect" output="screen"
        args="13 0.08 0.2 /io/internal_camera/right_hand_camera/image_raw /io/internal_camera/right_hand_camera/camera_info /world">
    <remap from="/ar_pose_marker" to="/wrist/ar_pose_marker" />
  </node>

  <!-- Logitech Camera AR Detection -->
  <node name="ar_track_alvar_webcam" pkg="ar_track_alvar" type="individualMarkersNoKinect" output="screen"
        args="13 0.08 0.2 /logitech_c615/image_raw /logitech_c615/camera_info /world">
    <remap from="/ar_pose_marker" to="/webcam/ar_pose_marker" />
  </node>

  <!-- Static Transform: AR Tag to Chessboard -->
  <node pkg="tf" type="static_transform_publisher" name="ar_to_chessboard"
        args="0.1 -0.1 0 0 0 0 /ar_marker_0 /chessboard 100" />

  <!-- Optional: RViz for Visualization -->
 <!-- <node pkg="rviz" type="rviz" name="rviz" args="-d $(find your_package_name)/rviz_config/chess_robot.rviz" />-->
</launch>
